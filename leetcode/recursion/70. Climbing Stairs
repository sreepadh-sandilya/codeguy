class Solution {
public:
    int climbStairs(int n) {
        
        if(n==0)
        {
            return 0;
        }
        if(n==1)
        {
            return 1;
        }
        if(n==2)
        {
            return 2;
        }
        if(n==3)
        {
            return 3;
        }

        return climbStairs(n-1)+climbStairs(n-2);
        
    }
};
// this question can be done using dynamic programming... but i did it using recursion..
