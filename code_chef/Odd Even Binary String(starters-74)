#include <iostream>
using namespace std;

int main() {
	// your code goes here
	
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    int arr[n];
	    int sum=0;
	    for(int i=0;i<n;i++)
	    {
	        cin>>arr[i];
	        if(arr[i]==1)
	        {
	            sum++;
	        }
	    }
	    
	    if(n%2==0)
	    {
	        if(sum%2==0)
	        {
	            cout<<"yes"<<endl;
	        }
	        else
	        {
	            cout<<"no"<<endl;
	        }
	    }
	    else
	    {
	        if(sum%2==0)
	        {
	            cout<<"no"<<endl;
	        }
	        else
	        {
	            cout<<"yes"<<endl;
	        }
	    }
	    
	}
	
	return 0;
}
