#include <iostream>
using namespace std;
#include <vector>

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    vector<int>v(n);
	    v[0]=2;
	    v[n-1]=1;
	    for(int i=1;i<n-1;i++)
	    {
	        v[i]=i+2;
	    }
	    
	    for(int i=0;i<n;i++)
	    {
	        cout<<v[i]<<" ";
	    }
	    cout<<endl;
	    
	}
	return 0;
}
