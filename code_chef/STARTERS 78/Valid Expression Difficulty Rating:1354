#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n,x;
	    cin>>n>>x;
	   // int a=n-x+1;
	   int a;
	   if(x>0)
	   {
	       a=n-x+1;
	   }
	   else
	   {
	       a=n-1+x;
	   }
	    string s="";
	    if(x<=n+1 && x>=-n+1){
	   if(x>0){
	    for(int i=0;i<n;i++)
	    {
	        
	        
	        if(a>=1)
	        {
	            s+='*';
	            a--;
	        }
	        
	       
	        else
	        {
	            s+='+';
	        }
	        
	    }
	   }
	   else
	   {
	       for(int i=0;i<n;i++)
	    {
	        
	        
	        if(a>=1)
	        {
	            s+='*';
	            a--;
	        }
	        
	       
	        else
	        {
	            s+='-';
	        }
	        
	    }
	   }
	    cout<<s<<endl;
	    }
	    else
	    {
	        cout<<-1<<endl;
	    }
	}
	return 0;
}
