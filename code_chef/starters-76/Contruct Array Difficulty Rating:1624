#include <iostream>
using namespace std;
#include <list>
int main() {
	// your code goes here
	
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    list<int>l;
	    if(n%2!=0)
	    {
	        cout<<-1<<endl;
	    }
	    else{
	    for(int i=0;i<n-1;i++)
	    {
	        if(i%2==0)
	        {
	            l.push_back(1);
	        }
	        else
	        {
	            l.push_back(-1);
	        }
	    }
	    
	    l.push_back(0);
	    
	    for(auto i:l)
	    {
	        cout<<i<<" ";
	    }
	    
	    cout<<endl;
	    }
	    
	}
	
	return 0;
}
