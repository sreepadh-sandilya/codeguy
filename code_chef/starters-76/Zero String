#include <iostream>
using namespace std;

int main() {
	// your code goes here
	
	int t;
	cin>>t;
	while(t--)
	{
	    int n,x=0,y=0;
	    cin>>n;
	    string s;
	    cin>>s;
	    for(int i=0;i<n;i++)
	    {
	        if(s[i]=='0')
	        {
	            x++;
	        }
	        else
	        {
	            y++;
	        }
	    }
	    if(y<x+1)
	    {
	        cout<<y<<endl;
	    }
	    else
	    {
	        cout<<x+1<<endl;
	    }
	}
	
	return 0;
}
